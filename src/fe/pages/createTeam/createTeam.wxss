.view-contain {
  display: flex;
  height: 40px;
  margin: 20px;
  border: 3rpx solid #5c5af1;
  border-radius: 10rpx;
}
.text {
  position: absolute;
  font-size: 10px;
  background:white;
  margin: -10px 0 0 10px;
  padding: 0 5px;
  color: rgb(89, 89, 255);
}

.input {
  margin: 10px;
  font-size: 14px;
  width: 100%;
}

.createButton{
  position: fixed;
  left: 150rpx;
  bottom: 30rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  line-height: 40px;
  font-size: 36rpx;
  text-align: center;
  background-color: #007AFF !important;
  margin-top: 20px;
  margin-bottom: 20px;
  color: #FFFFFF;
  border-radius: 10px;
}